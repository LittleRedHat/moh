		form.page.value = page;

		form.submit();

	}



	//ÆÄÀÏ ´Ù¿î·Îµå.

	function fileDownLoad(fileSeq)

	{

		if( confirm( "Do you wish to download now?") == true ) {

			var form = document.fmView;

			form.FILE_SEQ.value = fileSeq;

			form.action = "/front_new/modules/download.jsp";

			form.submit();

		}

